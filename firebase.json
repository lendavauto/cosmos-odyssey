{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "*",
        "function": "customApi"
      }
    ]
  },
  "functions": {
    "predeploy": ["npm --prefix \"%RESOURCE_DIR%\" run"]
  }
}
